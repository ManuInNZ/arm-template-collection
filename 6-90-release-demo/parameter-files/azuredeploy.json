{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "image": {
           "type": "string",
           "metadata": {
                "description": "Container Image to use."
            }
        },    
        "containerName": {
            "type": "string",
            "metadata": {
                "description": "Container name."
            },
            "maxLength": 5,
            "allowedValues": [
                "one",
                "two",
                "three"
            ]
        }
    },
    "variables": {
        "deployment": "[deployment().properties.templateLink.uri]"
    },
    "resources": [
        {
            "name": "containerGroup1",
            "type": "Microsoft.ContainerInstance/containerGroups",
            "apiVersion": "2018-04-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "containers": [
                    {
                        "name": "[parameters('containerName')]",
                        "properties": {
                            "image": "[parameters('image')]",
                            "ports": [
                                {
                                    "port": 80
                                }
                            ],
                            "resources": {
                                "requests": {
                                    "cpu": 1,
                                    "memoryInGB": 1
                                }
                            }
                        }
                    }
                ],
                "osType": "Linux",
                "ipAddress": {
                    "type": "Public",
                    "ports": [
                        {
                            "protocol": "TCP",
                            "port": 80
                        }
                    ]
                 }
            }
        }
    ],
    "outputs": {
        "deploymentUri": {
           "type": "string",
           "value": "[variables('deployment')]"
        }
    },
    "functions": []
}