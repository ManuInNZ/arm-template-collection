{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "sasToken": {
           "type": "string"
        }
    },
    "variables": {
        
        // deployment-one: split on comma
        "uri": "[uri(deployment().properties.templateLink.uri, 'artifacts/azuredeploy-aci.json')]",

        // deployment-two: ?
        "github-raw": "https://raw.githubusercontent.com/neilpeterson/arm-template-collection/master/linked-template-patterns/artifacts/azuredeploy-aci.json",
        
        // deployment-three: split on comma
        "artifacts-location": "[deployment().properties.templateLink.uri]",
        "uri-concat": "[uri(variables('artifacts-location'), 'artifacts/azuredeploy-aci.json')]",

        // deployment-four: ?
        "template": "https://templatestoragenepeters.blob.core.windows.net/linked-tempaltes/azuredeploy-aci.json",
        "artifacts-storage": "linked-tempaltes/azuredeploy-aci.json",
        "uri-storage": "[concat(uri(variables('template'), variables('artifacts-storage')), parameters('sasToken'))]"

    },
    "resources": [
        {
            "name": "deployment-one",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "dependsOn": [
                "[reference('deployment-one')]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('uri')]",
                    "contentVersion": "1.0.0.0"
                }
            }
        },
        {
            "name": "deployment-two",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('github-raw')]",
                    "contentVersion": "1.0.0.0"
                }
            }
        },
        {
            "name": "deployment-three",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('uri-concat')]",
                    "contentVersion": "1.0.0.0"
                }
            }
        },
        {
            "name": "deployment-four",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('uri-storage')]",
                    "contentVersion": "1.0.0.0"
                }
            }
        }
    ],
    "outputs": {
        "template-link-uri": {
           "type": "string",
           "value": "[deployment().properties.templateLink.uri]"
        }
    }
}