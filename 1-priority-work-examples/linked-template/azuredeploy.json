// az group deployment create --resource-group test444 --template-uri https://raw.githubusercontent.com/neilpeterson/arm-template-collection/master/1-priority-work-examples/linked-template/azuredeploy.json --handle-extended-json-format
// How do we derive file location on disk (uri function only returns a value when run from URI)
// How far deep do we go with linked tempaltes
// How do we handle parameters file vs. inline parameter values
// How do we handle paramerter files + intline parameter values

{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {},
    "variables": {},
    "resources": [
        {
            "name": "vote-database-002",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2018-05-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/neilpeterson/arm-template-collection/master/1-priority-work-examples/linked-template/azuredeploy-cosmos.json",
                    "contentVersion": "1.0.0.0"
                },
                // Paramaters File
                "parametersLink": {
                    "uri": "https://raw.githubusercontent.com/neilpeterson/arm-template-collection/master/1-priority-work-examples/linked-template/azuredeploy-cosmos.parameters.json",
                    "contentVersion": "1.0.0.0"
                }
            }
        },
        {
            "name": "vote-frontend",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/deployments', 'vote-database')]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/neilpeterson/arm-template-collection/master/1-priority-work-examples/linked-template/azuredeploy-aci.json",
                    // "uri": "[uri(deployment().properties.templateLink.uri, 'azuredeploy-aci.json')]",
                    "contentVersion": "1.0.0.0"
                },
                // Inline Parameters
                "parameters": {
                    "cosmosDbKey": {
                        "value": "[reference('vote-database').outputs.dbkey.value]"
                    },
                    "cosmosDb": {
                        "value": "[reference('vote-database').outputs.dbendpoint.value]"
                    }
                }
            }
        }
    ],
    "outputs": {
        "file": {
           "type": "string",
           "value": "deployment().properties.template"
        }
    }
}