{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "resources": [
        {
            "name": "nepetersStorageOne",
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2019-06-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "accountType": "Standard_LRS"
            }
        }
    ],
    "outputs": {
        "storageUri": {
           "type": "string",
           // Unfortunatley it does not look like output is defined in the schema (primaryEndpoints)
           // However is in the OpenAPI
           // https://github.com/Azure/azure-rest-api-specs/blob/master/specification/storage/resource-manager/Microsoft.Storage/stable/2019-06-01/storage.json#L1975
           "value": "[reference('nepetersStorageOne', '2019-06-01').primaryEndpoints['blob']]"
        }
    }
}